#!/usr/bin/env node
const argv = require("yargs").argv;
const client = require("../lib/client");

if (!process.stdout.isTTY) {
  console.error("Not using a terminal window");
  process.exit(-1);
}

(async () => {
  if (argv.cleanup) {
    await client.cleanup();
  } else if (argv.key) {
    console.log(client.key());
  } else {
    await client.start(argv);
    process.exit(0);
  }
})();
