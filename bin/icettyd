#!/usr/bin/env node
const argv = require("yargs").argv;
const inquirer = require("inquirer");
const debug = require("debug")("icetty:daemon");
const host = require("../lib/host");

(async () => {
  if (argv.setup) {
    await host.setup();
  } else if (argv.add) {
    await host.addClient();
  } else if (argv.id) {
    console.log(host.getId());
  } else if (argv.cleanup) {
    await host.cleanup();
  } else {
    await host.start();
  }
})();
